<!DOCTYPE html>
<html>
  <head>

   <link rel='stylesheet' href='/stylesheets/style.css' />
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
  </head>
  <body>

  	<nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Student Greivance Support System</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/dashboard">Home</a></li>
                <li><a href="/create-ticket">Create Ticket </a></li>
                <li><a href="/view-ticket">View Ticket </a> </li>  
                <li><a href="/logout">Logout</a></li>
            </ul>
            <div class="navbar-header" style="float: right;"> <a class="navbar-brand" href="#">Loggedin As: <%if(loginUser) {%>
	            <%= loginUser %>
	            <%}%></a></div>
            </div>
    </nav>
    
    <div class="container">
      <div class="row">
        <h1> My tickets </h1>
        <br>
        <table class="table table-striped table-primary"> 

          <tbody>
            <% if(records.length > 0) {
                  records.forEach(function(row) {
                  if(row._id == ticket_id) {
               %>
               <tr><td><h4>Ticket id</h4><%= row._id %></td></tr>
              <tr><td><h4>Ticket Subject</h4><%= row.TicketSubject %></td></tr>
              <tr><td><h4>Periority</h4><%= row.Periority %></td></tr>
              <tr><td><h4>Ticket Category</h4><%= row.TicketCategory %></td></tr>
              <tr><td><h4>Ticket Body</h4><%- row.TicketBody %></td></tr>
              <tr>
                <td> 
                    <a class="btn btn-primary btn-xs" href="/view-ticket/edit/<%= row.id%>"<i class="fa fa-edit">Edit</i> </a>
                     <a class="btn btn-danger btn-xs" href="/view-ticket/delete/<%= row.id%>"onclick="return confirm('Are you sure?')"<i class="fa fa-trash">Delete</i> </a> 
                    
                </td>
              </tr>
            </tr>
              
            </div>
          </div>
           <% }})} %>
          </tbody>
        </table>
      </div>
    </div>  
  	
  </body>
</html>
