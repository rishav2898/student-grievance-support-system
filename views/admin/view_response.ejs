<!DOCTYPE html>
<html>
  <head>

   <link rel='stylesheet' href='/stylesheets/style.css' />
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
  </head>
  <body>

  	<nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Student Greivance Support System</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="/finance_dept/view-all-ticket">All Tickets</a></li>
                <li><a href="#">Discarded </a></li>
                <li><a href="#">Responses </a> </li>  
                <li><a href="/logout">Logout</a></li>
            </ul>
            <div class="navbar-header" style="float: right;"> <a class="navbar-brand" href="#">Loggedin As: <%if(loginUser) {%>
	            <%= loginUser %>
	            <%}%></a></div>
            </div>
    </nav>
    
    <div class="container">
      <div class="row">
        <h1> All Tickets </h1>
        <br>
        <table class="table table-striped table-primary"> 
          <thead> 
            <tr> 
              <th> Ticket id </th>
              <th> Updated </th>
              <th> Category </th>
              <th> Periority </th>
              <th> Assign </th>
              <th> Action </th>
            </tr>
          </thead>

          <tbody>
            <% if(records.length > 0) {
                  records.forEach(function(row) {
                  if(row.TicketCategory == 'Finance') {
               %>
            <tr>
              <td><%= row._id %></td>  
              <td><%= row.date %></td> 
              <td><%= row.TicketCategory %></td>
              <td><%= row.Periority %></td>
              <td> auto </td>
              <td> 
                <a class="btn btn-primary btn-xs" href="/finance_dept/view-ticket-details/<%= row.id%>"<i class="fa fa-edit">View</i> </a>
                   <a class="btn btn-danger btn-xs" href="/view-ticket/delete/<%= row.id%>"onclick="return confirm('Are you sure?')"<i class="fa fa-trash">Delete</i> </a> 
                  
              </td>
            </tr>
              
            </div>
          </div>
           <% }})} %>
          </tbody>
        </table>
      </div>
    </div>  
  	
  </body>
</html>
